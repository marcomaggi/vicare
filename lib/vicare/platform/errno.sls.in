;;;; helpers

(define-syntax neg
  (lambda (stx)
    (syntax-case stx ()
      ((_ ?code)
       (let ((N (syntax->datum #'?code)))
	 (if (number? N)
	     (- N)
	   #t))))))

(define-syntax define-inline-constant
  (syntax-rules ()
    ((_ ?name ?value)
     (define-syntax ?name (identifier-syntax ?value)))))


